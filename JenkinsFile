pipeline{
    agent any

    stages{
        stage('Checkout'){
            steps{
            git 'https://github.com/SarvY1999/OrangeHrm.git'
            }
        }
        stage('Install Dependencies'){
            steps{
                bat 'npm install'
            }
        }
        stage('Run tests'){
            steps{
                bat 'npx cypress run'
            }
            post{
                always{
                    archiveArtifacts artifacts: 'reports/*.html', allowEmptyArchive: true
                }
            }
        }
        stage('Debug Reports Directory') {
            steps {
                // List the contents of the reports directory for debugging purposes
                bat 'dir reports'
            }
        }
    }
    post{
        always{
                emailext subject: 'Test Results',
                        body: 'Test results are attached.',
                        attachmentsPattern: 'reports/*.html',
                        to: 'sarveshy193@gmail.com'
            
            cleanWs()
        }
    }
}