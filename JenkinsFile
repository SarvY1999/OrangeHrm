pipeline{
    agent any

    stages{
        stage('Checkout'){
            steps{
            git 'https://github.com/SarvY1999/OrangeHrm.git'
            }
        }
        stage('Install Dependencies'){
            steps{
                bat 'npm install'
            }
        }
        stage('Run tests'){
            steps{
                bat 'npx cypress run'
            }
            post{
                always{
                    archiveArtifacts artifacts: 'cypress/reports/html/*.html', allowEmptyArchive: true
                }
            }
        }
        stage('Zip Reports') {
            steps {
                // Zip the reports directory
                bat 'powershell Compress-Archive -Path cypress\\reports\\html\\* -DestinationPath cypress\\reports\\html-reports.zip'
            }
        }
    }
    post{
        always{
                emailext subject: 'Test Results',
                        body: 'Test results are attached.',
                        attachmentsPattern: 'cypress/reports/html-reports.zip',
                        mimeType: 'application/zip',
                        to: 'sarveshy193@gmail.com'
            
            cleanWs()
        }
    }
}